              </div>
              <div class="details-link-block">
                <a href="{{ product.url | within: collection }}" class="details-link">More details</a>              
              </div>              
            </section>           		
          {% endif %}          
        {% endfor %}
      {% endif %}  
    </div>
  </article>            
</main>

<script>
  if(window.location.pathname.split('/')[3]){
  	$('.breadcrumb li:last').text("Recommended Repeaters");
  }else{
    $('.breadcrumb li:last').text("{{collection.title}}");
	$('.recommend__top-title, .recommend__edit-steps, .we-recommend, .recommend__upgraded_list h2').hide();
    $('.collection-title').show();
                                           
	if($(window).width() >= 1000){
      $('.recommend__upgraded_list .recommend__item:hidden:first').show();
    }else{
    	$('.recommend__upgraded_list .recommend__item-mobile:hidden:first').show();
    }
	
                                           
	
  }
</script>