<script>
  $('#form-file').change(function(e) {    
    if($(window).width() > 1000){
      console.log($(this).val());
      var fileName = $(this).val().split('/').pop().split('\\').pop();
      var l = fileName.split('.').length - 1;
      var ext = fileName.split('.')[l];
      if(ext != 'pdf' || ext != 'PDF'){
        $('#form-file-value').html('<span style="color:red;">Incorrect file...</span>');
    	$('#form-file-value').show();
        return false;
      }
      if(fileName.length > 13){
      	var name = fileName.slice(0, 8)+'... .'+fileName.split('.')[1];
      }else{
      	var name = fileName;
      }      
    }else{
      var fileName = $(this).val().split('/').pop().split('\\').pop();
      var name = fileName;
    }
    $('#form-file-value').html(name);
    $('#form-file-value, #form-file-clear').show();    
  });
  $('#form-file-clear').click(function(e) {
    $('#form-file').val('');
    $('#form-file-value').html('');
    $('#form-file-value, #form-file-clear').hide();
  });
</script>


