<main class="certificates">
  <div class="wrapper">
    <h1>{{ page.title }}</h1>
	<div class="rte">
      {{ page.content }}
    </div>    
  </div>
</main>

<section class="modal" id="certificates-img">  	
  <div class="modal__body">
    
  </div>
</section>

<script>  
  $('.certificates .rte table').each(function(index, el){
	var tdLength = $(el).find('td').length;
    var tdWidth = 100/tdLength;
    $(el).find('td').each(function(index, el){
    	$(el).css('width', tdWidth+'%');
    });
  });
  $('.certificates .rte table img').click(function(e){
    var src = $(this).attr('src');
  	var img = '<img src="'+src+'"/>';
    $('#certificates-img .modal__body').html(img).append('<i class="close"></i>');
    $('#certificates-img').fadeIn(150);
  });
  if($(window).width() < 1000){
    $('table tr').slick({
        infinite: true,
        arrows: false,
        centerMode: true,
        centerPadding: '44px',              
        slidesToShow: 1,
        slidesToScroll: 1,
        dots : true
      });
  }
</script>