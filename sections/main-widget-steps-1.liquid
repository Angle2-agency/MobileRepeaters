            "label" : "Network Text"
        },
        {
            "type" : "text",
            "id" : "tooltip",
            "label" : "Network Tooltip Text"
        }
    ],
    "blocks": [
        {
            "type": "brand",
            "name": "Brand",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "logo",
                    "label": "Brand Logo"
                },
                {
                    "type" : "collection",
                    "id" : "brand_coll",
                    "label" : "Select collection"                    
                }
            ]
        }
    ]
  }
